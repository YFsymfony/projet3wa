{% extends "troiswaBackBundle::layout_admin.html.twig" %}



{% block stylesheet %}
    {{ parent() }}
{% endblock stylesheet %}

{% block title %}
    <h1 class="text-uppercase main-heading text-center">Section categories</h1>
{% endblock title %}

{% block breadcrumb %}

    <ol class="breadcrumb">
        {{ parent() }}
        <li class="">
            <i class="fa fa-cube"></i> <a href="{{ path('troiswa_back_category') }}">Categories</a>
        </li>
        <li class="active">
            <i class="fa fa-info"></i> Info
        </li>
    </ol>

{% endblock breadcrumb %}

{%  block contenu %}

    <div class="row">
        <div class="col-lg-12">

            <h2 class="main-heading"><i class="fa fa-info-circle"></i> Information sur la categorie {{ category.title|upper }}</h2>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>TITRE</th>
                        <th>Position</th>
                        <th>Description</th>
                    </tr>
                    </thead>
                    <tbody>

                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.title }}</td>
                        <td>{{ category.position }}</td>
                        <td>{{ category.description }}</td>
                    </tr>


                    </tbody>
                </table>
            </div>

            <hr/>


            <div class="tab-pane" id="panel-198157">
                <div class="row">
                    <div class="col-md-12 col-lg-12 col-sm-12">
                        <h3 class="text-center main-heading">Produits de la Categorie : {{ category.title }}</h3>
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h4 class="panel-title">Produits</h4>
                            </div>
                            <div class="panel-body">
                                <input type="text" class="form-control" id="task-table-filter" data-action="filter" data-filters="#task-table" placeholder="Filtre des Produits" />
                            </div>
                            <table class="table table-hover" id="task-table">
                                <thead>
                                <tr>
                                    <th># ID</th>
                                    <th>Désignation / Edition</th>
                                    <th>Quantitée</th>
                                    <th>Status</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for product in catProducts %}
                                    <tr>
                                        <td>{{ product.id }}</td>
                                        <td><a class="btn btn-primary" href="{{ path('troiswa_back_product_edit',{idprod: product.id} ) }}">{{ product.title }}</a></td>
                                        <td>{{ product.quantity }}</td>
                                        {% if product.quantity == 0 %}
                                            <td class="danger text-center">Rupture de stock</td>
                                        {% elseif product.quantity <5 and product.quantity != 0%}
                                            <td class="warning text-center">A commander</td>
                                        {% else %}
                                            <td class="success text-center">OK</td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}



                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>




        </div>
    </div>

{% endblock contenu %}

{% block javascripts %}
    {{ parent() }}
{% endblock javascripts %}