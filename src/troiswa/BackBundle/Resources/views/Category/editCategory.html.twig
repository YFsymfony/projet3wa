{% extends "troiswaBackBundle::layout_admin.html.twig" %}



{% block stylesheet %}
    {{ parent() }}
{% endblock stylesheet %}

{% block title %}
    <h1>Modifier une categorie</h1>
{% endblock title %}

{% block breadcrumb %}

    <ol class="breadcrumb">
        {{ parent() }}
        <li class="">
            <i class="fa fa-cube"></i> <a href="{{ path("troiswa_back_category") }}">categories</a>
        </li>
        <li class="active">
            <i class="fa fa-plus-square-o"></i> Modifier une categorie
        </li>
    </ol>

{% endblock breadcrumb %}


{% block contenu %}

    {{ form_start(formUpdateCategory) }}

    <div class="form-group">
        {{ form_label(formUpdateCategory.title, "Entrez le nom de la categorie" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(formUpdateCategory.title) }}
        {{ form_widget(formUpdateCategory.title, {attr:{class:"form-control"}} ) }}
    </div>

    <div class="form-group">
        {{ form_label(formUpdateCategory.description, "Entrez la description de la categorie" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(formUpdateCategory.description) }}
        {{ form_widget(formUpdateCategory.description, {attr:{class:"form-control"}} ) }}
    </div>

    <div class="form-group">
        {{ form_label(formUpdateCategory.position, "Entrez la position de la categorie" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(formUpdateCategory.position) }}
        {{ form_widget(formUpdateCategory.position, {attr:{class:"form-control"}} ) }}
    </div>

    <div class="form-group">
        {{ form_label(formUpdateCategory.products, "Choisissez les produits associ√©s (ctrl+click):" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(formUpdateCategory.products) }}
        {{ form_widget( formUpdateCategory.products, {attr:{class:"form-control"}} ) }}
    </div>

    <div class="form-group">
        {{ form_widget(formUpdateCategory.envoyer, {label:"Envoyer",attr:{class:"btn btn-warning"}} ) }}
    </div>

    {{ form_end(formUpdateCategory) }}

{% endblock contenu %}

{% block javascripts %}
    {{ parent() }}
{% endblock javascripts %}