{% extends "troiswaBackBundle::layout_admin.html.twig" %}



{% block stylesheet %}
    {{ parent() }}
{% endblock stylesheet %}

{% block title %}
    <h1>Edition de produit</h1>
{% endblock title %}

{% block breadcrumb %}

    <ol class="breadcrumb">
        {{ parent() }}
        <li class="">
            <i class="fa fa-cube"></i> <a href="{{ path("troiswa_back_product") }}">produits</a>
        </li>
        <li class="active">
            <i class="fa fa-pencil-square-o"></i> editer un produit
        </li>
    </ol>

{% endblock breadcrumb %}


{% block contenu %}

    {{ form_start(formUpdateProduct) }}

    <div class="form-group">
        {{ form_label(formUpdateProduct.title, "Entrez le nom du produit" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(formUpdateProduct.title) }}
        {{ form_widget(formUpdateProduct.title, {id:'monid',attr:{class:"form-control toto"}} ) }}
    </div>

    <div class="form-group">
        {{ form_label(formUpdateProduct.description, "Entrez la description produit:" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(formUpdateProduct.description) }}
        {{ form_widget(formUpdateProduct.description, {attr:{class:"form-control toto"}} ) }}
    </div>

    <div class="form-group">
        {{ form_label(formUpdateProduct.price, "Entrez le prix du produit:" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(formUpdateProduct.price) }}
        {{ form_widget(formUpdateProduct.price, {attr:{class:"form-control toto"}} ) }}
    </div>

    <div class="form-group">
        {{ form_label(formUpdateProduct.active,  "Choisissez si le produit est disponible:" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(formUpdateProduct.active) }}
        {{ form_widget(formUpdateProduct.active, {attr:{class:""}} ) }}
    </div>

    <div class="form-group">
        {{ form_label(formUpdateProduct.quantity, "Entrez la quantit√©:" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(formUpdateProduct.quantity) }}
        {{ form_widget(formUpdateProduct.quantity, {attr:{class:"form-control toto"}} ) }}
    </div>

    <div class="form-group">
        {{ form_label(formUpdateProduct.categ, "Choisissez la categorie:" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(formUpdateProduct.categ) }}
        {{ form_widget(formUpdateProduct.categ, {attr:{class:"form-control toto"}} ) }}
    </div>

    <div class="form-group">
        {{ form_widget(formUpdateProduct.envoyer, {label:"Envoyer",attr:{class:"btn btn-warning"}} ) }}
    </div>

    {{ form_end(formUpdateProduct) }}

{% endblock contenu %}

{% block javascripts %}
    {{ parent() }}
{% endblock javascripts %}