{% extends "troiswaBackBundle::layout_admin.html.twig" %}



{% block stylesheet %}
    {{ parent() }}
{% endblock stylesheet %}

{% block title %}
    <h1>Information:</h1>
{% endblock title %}

{% block breadcrumb %}

    <ol class="breadcrumb">
        {{ parent() }}
        <li class="">
            <i class="fa fa-cube"></i> <a href="{{ path('troiswa_back_product') }}">Produits</a>
        </li>
        <li class="active">
            <i class="fa fa-info"></i> Info
        </li>
    </ol>

{% endblock breadcrumb %}

{%  block contenu %}

    <div class="row">
        <div class="col-lg-12">
            <h2>Information sur le produit {{ product.title|upper }}</h2>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>TITRE</th>
                        <th>Prix</th>
                        <th>Description</th>
                        <th>Quantit√©</th>
                        <th>Edition</th>
                        <th>Suppression</th>
                    </tr>
                    </thead>
                    <tbody>


                        <tr>
                            <td>{{ product.id }}</td>
                            <td>{{ product.title }}</td>
                            <td>{{ product.price }}</td>
                            <td>{{ product.description }}</td>
                            <td>{{ product.quantity }}</td>
                            <td><a class="btn btn-success" href="{{ path('troiswa_back_product_edit',{idprod: product.id} ) }}">Edit</a></td>
                            <td><a class="btn btn-danger" href="{{ path('troiswa_back_product_delete',{idprod: product.id} ) }}">Supprimer</a></td>
                        </tr>


                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock contenu %}

{% block javascripts %}
    {{ parent() }}
{% endblock javascripts %}