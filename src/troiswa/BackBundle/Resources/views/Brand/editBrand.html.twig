{% extends "troiswaBackBundle::layout_admin.html.twig" %}



{% block stylesheet %}
    {{ parent() }}
{% endblock stylesheet %}

{% block title %}
    <h1 class="text-uppercase main-heading text-center">Section marque</h1>
{% endblock title %}

{% block breadcrumb %}

    <ol class="breadcrumb">
        {{ parent() }}
        <li class="">
            <i class="fa fa-cube"></i> <a href="{{  path("troiswa_back_brand") }}">marques</a>
        </li>
        <li class="active">
            <i class="fa fa-plus-square-o"></i> modifier une marque
        </li>
    </ol>

{% endblock breadcrumb %}


{% block contenu %}


    <h2 class="main-heading"><i class="fa fa-fw fa-cube"></i> Edition de marque:</h2>
    {{ form_start(formUpdateBrand) }}

    <div class="form-group">
        {{ form_label(formUpdateBrand.title, "Entrez le nom de la marque" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(formUpdateBrand.title) }}
        {{ form_widget( formUpdateBrand.title, {id:'monid',attr:{class:"form-control toto"}} ) }}
    </div>

    <div class="form-group">
        {{ form_label(formUpdateBrand.description, "Entrez la description de la marque:" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(formUpdateBrand.description) }}
        {{ form_widget(formUpdateBrand.description, {attr:{class:"form-control toto"}} ) }}
    </div>

    <div class="form-group">
        {{ form_label(formUpdateBrand.logo.name, "Entrez la description de la marque:" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(formUpdateBrand.logo.name) }}
        {{ form_widget(formUpdateBrand.logo.name, {attr:{class:"form-control toto"}} ) }}
    </div>

    <div class="form-group">
        {{ form_label(formUpdateBrand.logo.alt, "Entrez la description de la marque:" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(formUpdateBrand.logo.alt) }}
        {{ form_widget(formUpdateBrand.logo.alt, {attr:{class:"form-control toto"}} ) }}
    </div>

    <div class="form-group">
        {{ form_label(formUpdateBrand.logo.figcaption, "Entrez la description de la marque:" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(formUpdateBrand.logo.figcaption) }}
        {{ form_widget(formUpdateBrand.logo.figcaption, {attr:{class:"form-control toto"}} ) }}
    </div>

    <div class="form-group">
        {{ form_label(formUpdateBrand.logo.logofile, "Entrez la description de la marque:" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(formUpdateBrand.logo.logofile) }}
        {{ form_widget(formUpdateBrand.logo.logofile, {attr:{class:"toto"}} ) }}
    </div>

    <div class="form-group">
        {{ form_widget(formUpdateBrand.envoyer, {label:"Envoyer",attr:{class:"btn btn-warning"}} ) }}
    </div>

    {{ form_end(formUpdateBrand) }}

{% endblock contenu %}

{% block javascripts %}
    {{ parent() }}
{% endblock javascripts %}