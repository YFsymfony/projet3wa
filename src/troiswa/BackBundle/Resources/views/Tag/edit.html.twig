{% extends "troiswaBackBundle::layout_admin.html.twig" %}

{% block stylesheet %}
    {{ parent() }}
    <link href="{{ asset("assets/css/jquery.datetimepicker.css") }}" rel="stylesheet">
{% endblock stylesheet %}

{% block title %}
    <h1 class="text-uppercase main-heading text-center">Section tag:</h1>
{% endblock title %}

{% block breadcrumb %}

    <ol class="breadcrumb">
        {{ parent() }}
        <li class="">
            <i class="fa fa-cube"></i> <a href="{{ path("tag") }}">Tags</a>
        </li>
        <li class="active">
            <i class="fa fa-plus-square-o"></i> edition de tag
        </li>
    </ol>

{% endblock breadcrumb %}

{% block contenu%}

    <h2 class="main-heading"><i class="fa fa-fw fa-cube"></i> Edition de tags:</h2>
    {{ form_start(edit_form) }}

    <div class="form-group">
        {{ form_label(edit_form.word, "Entrez la désignation du tag :" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(edit_form.word) }}
        {{ form_widget( edit_form.word, {attr:{class:" form-control "}} ) }}
    </div>

    <div class="form-group">
        {{ form_label(edit_form.product, "Choississez les produits associés :" , { label_attr:{class:"class_du_label"}} ) }}
        {{ form_errors(edit_form.product) }}
        {{ form_widget( edit_form.product, {attr:{class:" form-control "}} ) }}
    </div>

    {{ form_end(edit_form) }}

    <hr/>

        <ul class="record_actions list-unstyled">
    <li>
        <a class="btn btn-primary" href="{{ path('tag') }}">
            retour à la liste
        </a>
    </li>
</ul>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock javascripts %}
