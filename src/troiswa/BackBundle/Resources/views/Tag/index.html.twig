{% extends "troiswaBackBundle::layout_admin.html.twig" %}

{% block stylesheet %}
    {{ parent() }}
{% endblock stylesheet %}

{% block title %}
    <h1 class="text-uppercase main-heading text-center">Section tag:</h1>
{% endblock title %}

{% block breadcrumb %}

    <ol class="breadcrumb">
        {{ parent() }}
        <li class="active">
            <i class="fa fa-cube"></i> <a href="">Tag</a>
        </li>
    </ol>

{% endblock breadcrumb %}

{% block contenu %}

    <hr/>
    <div class="row">
    <div class="col-lg-6 col-md-6 col-xs-12 col-sm-12">
        <h2 class="main-heading"><i class="fa fa-fw fa-cube"></i> Liste de tous les tags<a class="btn btn-warning pull-right" href="{{ path('tag_new') }}">Cr√©er un nouveau tag</a></h2>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Word</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('tag_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.word }} </td>
                        <td>
                            <a class="btn btn-primary" href="{{ path('tag_show', { 'id': entity.id }) }}">show</a>

                            <a class="btn btn-success" href="{{ path('tag_edit', { 'id': entity.id }) }}">edit</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock javascripts %}
