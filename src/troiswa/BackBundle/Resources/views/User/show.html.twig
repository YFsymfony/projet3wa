{% extends "troiswaBackBundle::layout_admin.html.twig" %}

{% block stylesheet %}
    {{ parent() }}
{% endblock stylesheet %}

{% block title %}
    <h1>Information sur le client : {{ entity.firstname }} {{ entity.lastname }}</h1>
{% endblock title %}

{% block breadcrumb %}

    <ol class="breadcrumb">
        {{ parent() }}
        <li class="">
            <i class="fa fa-cube"></i> <a href="{{ path("user") }}">Clients</a>
        </li>
        <li class="active">
            <i class="fa fa-plus-square-o"></i> Information sur le client
        </li>
    </ol>

{% endblock breadcrumb %}

{% block contenu %}


    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ entity.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ entity.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ entity.birthday|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ entity.telephone }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ entity.pseudo }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ entity.adress }}</td>
            </tr>

        </tbody>
    </table>

    <hr/>

        <h3>Coupon possédé par {{ entity.firstname }} {{ entity.lastname }}:</h3>

        {% if entity.coupon != null %}
            {% for usercoupon in entity.coupon %}
                {%  dump(usercoupon) %}
                <div class="panel panel-body panel-default">
                    <h4>Numéro de coupon:</h4>
                    <p>{{ usercoupon.coupon.code }}</p>
                    <h4>Détail du coupon:</h4>
                    <p>{{ usercoupon.coupon.detail }}</p>
                </div>
            {% endfor %}
        {% else %}
            <div class="panel panel-body panel-default">
                <p>Cet utilisateur ne possède pas de coupon</p>
            </div>
        {% endif %}

    <hr/>

        <ul class="record_actions list-unstyled list-inline">
    <li>
        <a class="btn btn-primary" href="{{ path('user') }}">
            Retour à la liste
        </a>
    </li>
    <li>
        <a class="btn btn-primary" href="{{ path('user_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>

</ul>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock javascripts %}
